<%= form_with(model: @briefcase, local: true) do |form| %>
  <% if @briefcase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@briefcase.errors.count, "error") %> prohibited this briefcase_item from being saved:</h2>

      <ul>
      <% @briefcase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |techno_form| %>
      <li>
        <%= techno_form.label :name %>
        <%= techno_form.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>